! $OpenBSD: dot.Xdefaults,v 1.3 2014/07/10 10:22:59 jasper Exp $

xterm*loginShell:true
xterm*termName: xterm-256color
xterm*scrollBar: false
xterm*faceSize: 11
xterm*faceName: Hack

! URxvt settings
URxvt*loginShell: true
URxvt*termName: rxvt-unicode-256color
URxvt*font: xft:Hack:pixelsize=14
URxvt*scrollBar: false
URxvt*saveLines: 100000
URxvt*internalBorder: 10
URxvt*externalBorder: 10
URxvt*cURsorBlink: true
! clickable links!
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: firefox
URxvt.matcher.button: 1

! rofi settings
rofi.lines: 5
rofi.padding: 100
rofi.hide-scrollbar: true
rofi.font: Lotion Bold 12
rofi.separator-style: solid
rofi.color-enabled: true
rofi.color-window: #262626, #C6C6C6, #C6C6C6
rofi.color-normal: #262626, #87D7D7, #262626, #87AFD7, #262626
rofi.color-urgent: #262626, #D78787, #262626, #FFAFAF, #262626
rofi.color-active: #262626, #87AF5F, #262626, #AFD787, #262626
rofi.border-width: 5
rofi.terminal: urxvtc
rofi.run-shell-command: {terminal} -e '{cmd}'


! Corvine Xresources palette
*.foreground: #C6C6C6
*.background: #262626
*.color0:     #3A3A3A
*.color8:     #626262
! red
*.color1:     #D78787
*.color9:     #FFAFAF
! green
*.color2:     #87AF5F
*.color10:    #AFD787
! yellow
*.color3:     #D7D7AF
*.color11:    #D7D787
! blue
*.color4:     #87AFD7
*.color12:    #87D7FF
! magenta
*.color5:     #AFAFD7
*.color13:    #D7AFD7
! cyan
*.color6:     #87D7D7
*.color14:    #5FD7D7
! white
*.color7:     #C6C6C6
*.color15:    #EEEEEE
