! $OpenBSD: dot.Xdefaults,v 1.3 2014/07/10 10:22:59 jasper Exp $

xterm*loginShell:true
xterm*termName: xterm-256color
xterm*scrollBar: false
xterm*faceSize: 11
xterm*faceName: Hack

! URxvt settings
URxvt*loginShell: true
URxvt*termName: rxvt-unicode-256color
URxvt*font: xft:Hack:pixelsize=14
URxvt*scrollBar: false
URxvt*saveLines: 100000
URxvt*internalBorder: 10
URxvt*externalBorder: 10
URxvt*cURsorBlink: true
! clickable links!
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: firefox
URxvt.matcher.button: 1

! rofi settings
rofi.lines: 5
rofi.padding: 100
rofi.hide-scrollbar: true
rofi.font: Hack Bold 12
rofi.separator-style: solid
rofi.color-enabled: true
rofi.color-window: #282A36, #9AEDFE, #9AEDFE
rofi.color-normal: #282A36, #BD93F9, #4D4D4D, #FF79C6, #282A36
rofi.color-urgent: #282A36, #FF5555, #4D4D4D, #FF5555, #282A36
rofi.color-active: #282A36, #F1FA8C, #4D4D4D, #F1FA8C, #282A36
rofi.border-width: 5
rofi.terminal: xterm
rofi.run-shell-command: {terminal} -e '{cmd}'


! Dracula Xresources palette
*.foreground: #F8F8F2
*.background: #282A36
*.color0:     #000000
*.color8:     #4D4D4D
! red
*.color1:     #FF5555
*.color9:     #FF6E67
! green
*.color2:     #50FA7B
*.color10:    #5AF78E
! light yellow
*.color3:     #F1FA8C
*.color11:    #F4F99D
! purple
*.color4:     #BD93F9
*.color12:    #CAA9FA
! pink
*.color5:     #FF79C6
*.color13:    #FF92D0
! blue
*.color6:     #8BE9FD
*.color14:    #9AEDFE
! gray
*.color7:     #BFBFBF
*.color15:    #E6E6E6
